pipeline {
    agent any

    environment {
        REPOSITORY_BACKEND = 'server/BOSS'
        DOCKERFILE_DIRECTORY_BACKEND = 'server/BOSS'
        DOCKER_IMAGE_BACKEND = 'boss-backend:latest'
        ARTIFACT='server/BOSS/build/libs/BOSS-0.0.1.jar'
    }

    stages {
        stage('get scm') {
            steps {
                git branch: 'feat/infra/docker-and-jenkins', credentialsId: 'ssafygit', url: 'https://lab.ssafy.com/s11-webmobile3-sub2/S11P12E102'
            }
        }
        stage('build & test') {
            steps {
                dir(REPOSITORY_BACKEND) {
                    sh 'chmod +x ./gradlew'
                    sh './gradlew clean build'
                }
                post {
                    success {
                        archiveArtifacts artifacts: ARTIFACT, followSymlinks: false
                    }
                }
            }
        }
        stage('build docker iamge') {
            steps {
                dir(DOCKERFILE_DIRECTORY_BACKEND) {
                    script {
                        docker.build(DOCKER_IMAGE_BACKEND)
                    }
                }
            }
        }
        stage('run container') {
            steps {
                sh 'docker run --name boss-dev-backend ${DOCKER_IMAGE_BACKEND}'
            }
        }
        // stage('rolling update') {
        //     steps {
        //         step {
        //         }
        //         post {
        //         }
        //     }
        // }
    }
}