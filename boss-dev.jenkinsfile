pipeline {
    agent any

    environment {
        COMPOSE_DEV='docker-compose.dev.yml'
        AWS_CONFIG=credentials('application-aws')
    }

    stages {
        stage('setup AWS config') {
            steps {
                writeFile file: 'server/BOSS/src/main/resources/application-aws.yml', text: AWS_CONFIG
                sh 'ls server/BOSS/src/main/resources'
            }
        }
        stage('build images') {
            steps {
                sh 'docker compose -f $COMPOSE_DEV build'
            }
        }
        stage('run container') {
            steps {
                sh 'docker compose -f $COMPOSE_DEV down'
                sh 'docker compose -f $COMPOSE_DEV up -d'
            }
        }
    }
}