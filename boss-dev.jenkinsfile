pipeline {
    agent any

    tools {
        dockerTool 'docker!'
    }

    environment {
        TARGET_BRANCH='feat/infra/docker-and-jenkins'
        TARGET_REPOSITORY_URL='https://lab.ssafy.com/s11-webmobile3-sub2/S11P12E102'
        
        REPOSITORY_BACKEND = 'server/BOSS'
        DOCKERFILE_DIRECTORY_BACKEND = 'server/BOSS'
        DOCKER_IMAGE_BACKEND = 'boss-backend:latest'
        ARTIFACT='server/BOSS/build/libs/BOSS-0.0.1.jar'
        
        COMPOSE_DEV='docker-compose.dev.yml'
    }

    stages {
        stage('get scm') {
            steps {
                git branch: TARGET_BRANCH, credentialsId: 'ssafygit', url: TARGET_REPOSITORY_URL
            }
        }
        stage('build & test') {
            steps {
                dir(REPOSITORY_BACKEND) {
                    sh 'chmod +x ./gradlew'
                    sh './gradlew clean build'
                }
                // post {
                //     success {
                //         archiveArtifacts artifacts: ARTIFACT, followSymlinks: false
                //     }
                // }
            }
        }
        stage('build docker iamge') {
            steps {
                dir(DOCKERFILE_DIRECTORY_BACKEND) {
                    script {
                        docker.build(DOCKER_IMAGE_BACKEND)
                    }
                }
            }
        }
        stage('run container') {
            steps {
                // sh 'docker run --name boss-dev-backend -p 8081:8080'
                sh 'docker compose -f $COMPOSE_DEV down'
                sh 'docker compose -f $COMPOSE_DEV up -d'
            }
        }
        // stage('rolling update') {
        //     steps {
        //         step {
        //         }
        //         post {
        //         }
        //     }
        // }
    }
}